# -------------------------------------------------
# Allan Variance ROS Dockerfile for Jetson (ARM64/aarch64)
# Based on kalibr Dockerfile structure
# -------------------------------------------------
FROM dustynv/ros:noetic-ros-base-l4t-r35.4.1

ENV DEBIAN_FRONTEND=noninteractive

# -----------------------------------------------------------------
# 1) Refresh the ROS GPG key (the base image's key may be expired)
#    Using retry logic for network resilience
# -----------------------------------------------------------------
RUN for i in 1 2 3 4 5; do \
        apt-get update && break || sleep 10; \
    done && \
    apt-get install -y curl ca-certificates gnupg && \
    for i in 1 2 3 4 5; do \
        curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.asc | apt-key add - && break || sleep 5; \
    done && \
    rm -rf /var/lib/apt/lists/*

# -----------------------------------------------------------------
# 2) Install libffi8 from Ubuntu 22.04 (required by NVIDIA libraries)
# -----------------------------------------------------------------
RUN cd /tmp && \
    for i in 1 2 3 4 5; do \
        wget http://ports.ubuntu.com/pool/main/libf/libffi/libffi8_3.4.2-4_arm64.deb && break || sleep 10; \
    done && \
    dpkg -i libffi8_3.4.2-4_arm64.deb && \
    rm libffi8_3.4.2-4_arm64.deb && \
    ldconfig

# -----------------------------------------------------------------
# 3) Install the ROS packages and dependencies Allan Variance needs
# -----------------------------------------------------------------
RUN for i in 1 2 3 4 5; do apt-get update && break || sleep 10; done && \
    apt-get install -y \
    git wget nano \
    python3-dev python3-pip python3-numpy python3-scipy python3-matplotlib \
    libeigen3-dev libboost-all-dev \
    libomp-dev libyaml-cpp-dev \
    python3-catkin-tools python3-osrf-pycommon \
    ros-noetic-rosbag ros-noetic-rospy \
    ros-noetic-geometry-msgs ros-noetic-sensor-msgs \
    ros-noetic-tf2-ros ros-noetic-tf2-geometry-msgs \
    libffi-dev && \
    rm -rf /var/lib/apt/lists/*

# -----------------------------------------------------------------
# 4) Upgrade scipy (fixes numpy.typeDict compatibility error)
# -----------------------------------------------------------------
RUN pip3 install --upgrade scipy

# -----------------------------------------------------------------
# 5) Make the numpy headers visible to the compiler
# -----------------------------------------------------------------
RUN NUMPY_INCLUDE=$(python3 -c "import numpy; print(numpy.get_include())") && \
    ln -sf ${NUMPY_INCLUDE}/numpy /usr/include/numpy

# -----------------------------------------------------------------
# 6) Create the catkin workspace
# -----------------------------------------------------------------
ENV WORKSPACE=/catkin_ws
RUN mkdir -p $WORKSPACE/src && \
    cd $WORKSPACE && \
    catkin init && \
    catkin config --extend /opt/ros/noetic && \
    catkin config --cmake-args -DCMAKE_BUILD_TYPE=Release

# -----------------------------------------------------------------
# 7) Copy the Allan Variance ROS source code into the workspace
# -----------------------------------------------------------------
ADD . $WORKSPACE/src/allan_variance_ros

# -----------------------------------------------------------------
# 8) Build everything (use only 2 parallel jobs - Jetson has 8 GB RAM)
# -----------------------------------------------------------------
RUN cd $WORKSPACE && catkin build -j2

# -----------------------------------------------------------------
# 9) Set up the entrypoint
# -----------------------------------------------------------------
SHELL ["/bin/bash", "-c"]
ENTRYPOINT ["bash", "-c", "source /catkin_ws/devel/setup.bash && cd /catkin_ws && exec bash"]
